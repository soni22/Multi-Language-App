<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskRoadMap">


    <fragment
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.google.android.gms.maps.SupportMapFragment"/>



        <LinearLayout
            android:id="@+id/notification_layout"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/map_rejected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:text="Rejected"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/map_accepted"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Acceptd"
                android:textColor="@color/white"/>
        </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@+id/map_bottom_layout"
        android:src="@drawable/ic_call"
        android:clickable="true"/>

    <RelativeLayout
        android:id="@+id/map_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/map_trip_completed_driverwalkstarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Driver Arrived"
            android:textColor="@color/white"/>

    </RelativeLayout>

        <android.widget.GridLayout
            android:id="@+id/gridlayout_trip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary">

            <Button
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Trip Completed"
                android:textColor="@color/white"/>

            <Button
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Distane"
                android:layout_columnWeight="1"
                android:id="@+id/map_distace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/transparent"/>


            <Button
                android:layout_row="1"
                android:layout_column="2"
                android:text="Time"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:id="@+id/map_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/transparent" />


            <ImageView
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:id="@+id/map_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_call" />


        </android.widget.GridLayout>


</RelativeLayout>